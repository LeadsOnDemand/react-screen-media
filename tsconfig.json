{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "lib": [
      "es6",
      "es5",
      "dom"
    ],
    "experimentalDecorators": true
  },
  "exclude": [
    "coverage",
    "dist",
    "jest",
    "jest.setup.js",
    "node_modules",
    "src/**/__tests__/*.ts",
    "src/**/__tests__/*.tsx",
    "src/__mocks__"
  ]
}
